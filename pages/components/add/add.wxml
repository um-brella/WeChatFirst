<!--pages/components/add/add.wxml-->
<view class="page">
  <view class="weui-article">
    <view class="weui-article__h1">添加文章</view>
  </view>
  <form bindsubmit="formSubmit">
    <view class="weui-cells__title">文章标题</view>
      <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <input class="weui-input" maxlength="10" name="input" placeholder="请输入文本"  value="{{input}}"/>
        </view>
      </view>
    </view>

    <view class="weui-cells__title">文章内容</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea"  maxlength="200" name="textarea" placeholder="请输入文本" value="{{textarea}}" style="height: 6.3em" />
          <view class="weui-textarea-counter">0/200</view>
        </view>
      </view>
    </view>
  
    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" formType='submit'>确定</button>
    </view>
  </form>
</view>
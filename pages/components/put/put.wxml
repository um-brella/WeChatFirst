<!--pages/components/put/put.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">修改文章</view>
    </view>
    <form bindsubmit="formSubmit">
    <view class="weui-cells__title">文章标题</view>
      <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <input class="weui-input" name="input" value="{{text.title}}"/>
        </view>
      </view>
    </view>

    <view class="weui-cells__title">文章内容</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" name="textarea" value="{{text.content}}" style="height: 4.3em" />
          <view class="weui-textarea-counter">0/200</view>
        </view>
      </view>
    </view>
  
    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" formType='submit'>确定</button>
    </view>
  </form>
</view>

